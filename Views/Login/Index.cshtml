@{
    ViewBag.Title = "Login";
}
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Đăng nhập </title>

    @Styles.Render("~/Style/login")
</head>

<body class="login">
    <div>
        <a class="hiddenanchor" id="signup"></a>
        <a class="hiddenanchor" id="signin"></a>

        <div class="login_wrapper">
            <div class="animate form login_form">
                <section class="login_content">
                    @if (ViewBag.result == 1)
                    {
                        <div class="row">
                            <div class="panel panel-default">
                                <div class="panel-body">Tên đăng nhập hoặc mật khẩu bị sai. Xin vui lòng nhập lại.</div>
                            </div>
                        </div>
                    }
                    <div class="row">
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <div class="x_panel">
                                <div class="x_title">
                                    <h2>Đăng nhập</h2>
                                    <div class="clearfix"></div>
                                </div>
                                <div class="x_content">
                                    @using (Html.BeginForm())
                                    {
                                        <div class="form-group">
                                            <input type="text" class="form-control" placeholder="Tên tài khoản" required="required" name="nameUser" />
                                        </div>
                                        <div class="form-group">
                                            <input type="password" class="form-control" placeholder="Mật khẩu" required="required" name="pass" />
                                        </div>
                                        <div class="ln_solid"></div>
                                        <div class="form-group">
                                            <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                                <button class="btn btn-success" type="submit">Đồng ý</button>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>

    @Scripts.Render("~/Scripts/login")
</body>
</html>

@Styles.Render("~/Style/datatable")
<div class="row">
    <div class="clearfix"></div>
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <button class="btn btn-success" type="button" id="backButton">Quay lại</button>
                    </li>
                    <li>
                        <button class="btn btn-warning" type="button" id="printButton">Xuất excel</button>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <h1></h1>
            <div class="x_content">
                <div class="form-group"><h3 class="col-md-12 col-sm-12 col-xs-12" id="titlePage" style="text-align:center"></h3></div>
                <div class="form-group">
                    <table id="datatable-report" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th>STT</th>
                                <th>NGUYÊN LIỆU</th>
                                <th>SỐ LƯỢNG/TRỌNG LƯỢNG</th>
                                <th>ĐVT</th>
                                <th>ĐƠN GIÁ</th>
                                <th>NHÀ CUNG CẤP</th>
                                <th>GIAO HÀNG TRƯỚC</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (ViewBag.dataTable != null)
{
                                var dt = ViewBag.dataTable;
                                for (int i = 0; i < ViewBag.dataTable.Rows.Count; i++)
                                {
                                    <tr>
                                        <td>@(i+1)</td>
                                        <td>
                                            @dt.Rows[i]["MaterialName"].ToString()
                                        </td>
                                        <td>
                                            @dt.Rows[i]["Quantity"].ToString()
                                        </td>
                                        <td>
                                            @dt.Rows[i]["UOMName"].ToString()
                                        </td>
                                        <td>
                                            @dt.Rows[i]["UnitPrice"].ToString()
                                        </td>
                                        <td>
                                            @dt.Rows[i]["VendorName"].ToString()
                                        </td>
                                        <td>
                                            @dt.Rows[i]["IsDelivery"].ToString()
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@Scripts.Render("~/Scripts/datatable")
<script src="@Url.Content("~/Scripts/Party/ReportMaterialParty.js")"></script>
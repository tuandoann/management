@model QUANLYTIEC.Models.SYS_USER
<link href="@Url.Content("~/Extension/switchery/dist/switchery.min.css")" rel="stylesheet" />
<link href="@Url.Content("~/Extension/toastr-master/toastr.min.css")" rel="stylesheet" />
<script src="@Url.Content("~/Extension/toastr-master/toastr.min.js")"></script>
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h1><strong>@ViewBag.title</strong></h1>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <br />
                <form id="formUser" data-parsley-validate class="form-horizontal form-label-left" method="post">
                    <input type="text" id="userId" name="userId" required="required" class="form-control col-md-7 col-xs-12" value="@Model.UserID" style="display:none" />
                    <div class="form-group">
                        <label class="col-md-2 col-sm-2 col-xs-12" for="userName">
                            Tên đăng nhập <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input type="text" id="userName" name="userName" required="required" class="form-control col-md-7 col-xs-12" value="@Model.UserName" message-validator="Vui lòng nhập tên user!" />
                        </div>
                        <label class="col-md-2 col-sm-2 col-xs-12 col-md-offset-1" for="userName">
                            Phân quyền
                        </label>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 col-sm-2 col-xs-12" for="pass">
                            Mật khẩu <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <div class="input-group">
                                <input type="password" id="pass" name="pass" required="required" class="form-control col-md-7 col-xs-12" value="@Model.Password" message-validator="Vui lòng nhập pass!">
                                <span class="input-group-btn">
                                    <button type="button" class="btn btn-primary" title="Hiền thị mật khẩu" name="showOrHidePass">
                                        <span class="glyphicon glyphicon-eye-close" aria-hidden="true">

                                        </span>
                                    </button>
                                </span>
                            </div>
                        </div>
                        <div class="col-md-3 col-sm-3 col-xs-12 col-md-offset-1">
                            <div class="col-md-2 col-sm-2 col-xs-12">
                                <input type="checkbox" class="flat" checked="checked" id="IsConfig">
                            </div>
                            <label class="col-md-10 col-sm-10 col-xs-12">
                                Cấu hình
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 col-sm-2 col-xs-12" for="pass">
                            Xác nhận mật khẩu <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <div class="input-group">
                                <input type="password" id="confirmPass" name="pass" required="required" class="form-control col-md-7 col-xs-12" value="@Model.Password" message-validator="Vui lòng nhập pass!">
                                <span class="input-group-btn">
                                    <button type="button" class="btn btn-primary" title="Hiền thị mật khẩu" name="showOrHidePass">
                                        <span class="glyphicon glyphicon-eye-close" aria-hidden="true">

                                        </span>
                                    </button>
                                </span>
                            </div>
                        </div>
                        <div class="col-md-3 col-sm-3 col-xs-12 col-md-offset-1">
                            <div class="col-md-2 col-sm-2 col-xs-12">
                                <input type="checkbox" class="flat" checked="checked" id="IsRegisterParty">
                            </div>
                            <label class="col-md-10 col-sm-10 col-xs-12">
                                Lịch nhận tiệc
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 col-sm-2 col-xs-12" for="fullName">
                            Họ và tên <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input type="text" id="fullName" name="fullName" required="required" class="form-control col-md-7 col-xs-12" value="@Model.FullName" message-validator="Vui lòng nhập họ tên!">
                        </div>
                        <div class="col-md-3 col-sm-3 col-xs-12 col-md-offset-1">
                            <div class="col-md-2 col-sm-2 col-xs-12">
                                <input type="checkbox" class="flat" checked="checked" id="IsMaterial">
                            </div>
                            <label class="col-md-10 col-sm-10 col-xs-12">
                               Thực đơn định lượng
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 col-sm-2 col-xs-12">Sử dụng</label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input class="js-switch " type="checkbox" id="active" name="active" @if (!Model.IsActive) { @Html.Raw("checked")    } />
                        </div>
                        <div class="col-md-3 col-sm-3 col-xs-12 col-md-offset-1">
                            <div class="col-md-2 col-sm-2 col-xs-12">
                                <input type="checkbox" class="flat" checked="checked" id="IsAttendance">
                            </div>
                            <label class="col-md-10 col-sm-10 col-xs-12">
                                Chấm công
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 col-sm-2 col-xs-12" for="email">
                            Email
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input type="email" id="email" name="email" class="form-control col-md-7 col-xs-12" value="@Model.Email">
                        </div>
                        <div class="col-md-3 col-sm-3 col-xs-12 col-md-offset-1">
                            <div class="col-md-2 col-sm-2 col-xs-12">
                                <input type="checkbox" class="flat" checked="checked" id="IsList">
                            </div>
                            <label class="col-md-10 col-sm-10 col-xs-12">
                                Thiết lập dữ liệu
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-8 col-sm-8 col-xs-12">
                        </div>
                        <div class="col-md-3 col-sm-3 col-xs-12 col-md-offset-1">
                            <div class="col-md-2 col-sm-2 col-xs-12">
                                <input type="checkbox" class="flat" checked="checked" id="IsReport">
                            </div>
                            <label class="col-md-10 col-sm-10 col-xs-12">
                                Báo cáo
                            </label>
                        </div>
                    </div>

                    <div class="ln_solid"></div>
                  
                    <div class="form-group">
                        <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-2">
                            <button class="btn btn-warning" type="button" id="cancelbutton"><i class="fa fa-times"></i> Hủy</button>
                            <button class="btn btn-primary" type="reset"><i class="fa fa-refresh"></i> Nhập lại</button>
                            <button class="btn btn-success" type="button" id="sumbitbutton"><i class="fa fa-check"></i> Lưu</button>

                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script src="@Url.Content("~/Extension/switchery/dist/switchery.min.js")"></script>
<script src="@Url.Content("~/Scripts/user.js")"></script>
@model QUANLYTIEC.Models.TBL_VENDOR
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h1><strong>@ViewBag.title</strong></h1>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <br />
                <form data-parsley-validate class="form-horizontal form-label-left" method="post">
                    <input type="hidden" name="vendorID" id="vendorID" value="@Model.VendorID" />
                    <div class="form-group">
                        <label class="col-md-2 col-sm-2 col-xs-12" for="vendorName">
                            Nhà cung cấp <span class="required">*</span>
                        </label>
                        <div class="col-md-3 col-sm-3 col-xs-12">
                            <input type="text" id="vendorName" name="vendorName" required="required" class="form-control" value="@Model.VendorName" message-validator="Vui lòng nhập nhà cung cấp!" />
                        </div>
                        <div class="col-md-2 col-sm-2 col-xs-12"></div>
                      
                    </div>
              
                    <div class="form-group">

                        <label class="col-md-2 col-sm-2 col-xs-12" for="phoneNumber">
                            Số điện thoại bàn
                        </label>
                        <div class="col-md-3 col-sm-3 col-xs-12">
                            <input type="text" id="homePhone" name="HomePhone" class="form-control"  value="@Model.HomePhone" />
                        </div>
                    </div>

                    <div class="form-group">

                        <label class="col-md-2 col-sm-2 col-xs-12" for="phoneNumber">
                            Số điện thoại di động
                        </label>
                        <div class="col-md-3 col-sm-3 col-xs-12">
                            <input type="text" id="phoneNumber" name="phoneNumber" class="form-control"  value="@Model.PhoneNumber" />
                        </div>

                    </div>

                    <div class="form-group">
                        <label class="col-md-2 col-sm-2 col-xs-12" for="address">
                            Địa chỉ
                        </label>
                        <div class="col-md-10 col-sm-10 col-xs-12">
                            <input type="text" id="address" name="address" class="form-control" value="@Model.Address"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 col-sm-2 col-xs-12" for="notes">
                            Ghi chú
                        </label>
                        <div class="col-md-10 col-sm-10 col-xs-12">
                            <textarea class="form-control" id="notes" name="notes">@Model.Notes</textarea>
                        </div>
                    </div>
                    <div class="ln_solid"></div>
                    <div class="form-group">
                        <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-2">
                            <button class="btn btn-warning" type="button" id="cancelbutton"><i class="fa fa-times"></i> Hủy</button>
                            <button class="btn btn-primary" type="reset"><i class="fa fa-refresh"></i> Nhập lại</button>
                            <button class="btn btn-success" type="button" id="sumbitbutton"><i class="fa fa-check"></i> Lưu</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script src="@Url.Content("~/Scripts/vendor.js")"></script>
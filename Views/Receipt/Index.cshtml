@Styles.Render("~/Style/datatable")
<link href="@Url.Content("~/Extension/bootstrap-daterangepicker/daterangepicker.css")" rel="stylesheet" />
<div class="page-title">
    <div class="title_left">
        <h2>Phiếu thu</h2>
    </div>
    <ul class="nav navbar-right panel_toolbox">
        <li>
            <button class="btn btn-danger" id="deleteMany"><i class="fa fa-times-circle-o"></i> Xóa tùy chọn</button>
        </li>
        <li>
            <button class="btn btn-success" onclick="window.location.href='@Url.Content("~/Receipt/Create")'"><i class="fa fa-plus-circle"></i> Thêm phiếu thu</button>
        </li>
    </ul>
</div>

<div class="clearfix"></div>
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <label class="col-md-3 col-sm-3 col-xs-12" for="departmentName">
                    Từ ngày
                </label>
                <div class="col-md-3 col-sm-3 col-xs-12" style="margin-left: -6%">
                    <input type="text" id="fromDate" name="fromDate" class="form-control has-feedback-left" />
                    <span class="fa fa-calendar-o form-control-feedback left" aria-hidden="true"></span>
                </div>
                <label class="col-md-3 col-sm-3 col-xs-12" for="departmentName">
                    đến ngày
                </label>
                <div class="col-md-3 col-sm-3 col-xs-12" style="margin-left: -6%">
                    <input type="text" id="toDate" name="toDate" class="form-control has-feedback-left" />
                    <span class="fa fa-calendar-o form-control-feedback left" aria-hidden="true"></span>
                </div>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <button class="btn btn-primary" type="button" id="searchFrom"><i class="fa fa-search"></i>  Tìm kiếm</button>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <form data-parsley-validate class="form-horizontal form-label-left" method="post">
                    <div class="form-group">
                        <table id="datatable-item" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th><input type="checkbox" id="selectAll" /></th> 
                                    <th style="text-align:center">SỐ PHIẾU</th>
                                    <th style="text-align:center">NGÀY</th>
                                    <th style="text-align:center">TIỆC</th>
                                    <th style="text-align:center">SỐ TIỀN</th>
                                    <th style="text-align:center"></th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@Scripts.Render("~/Scripts/datatable")
<script src="@Url.Content("~/Extension/bootstrap-daterangepicker/daterangepicker.js")"></script>
<script src="~/Scripts/receipt.js"></script>


@model QUANLYTIEC.Models.TBL_SERVICE
<link href="@Url.Content("~/Extension/switchery/dist/switchery.min.css")" rel="stylesheet"/>
@Scripts.Render("~/Scripts/inputmask")
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h1><strong>@ViewBag.title</strong></h1>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <br/>
                <form id="formUser" data-parsley-validate class="form-horizontal form-label-left" method="post">
                    <input type="text" id="serviceID" name="serviceID" required="required" class="form-control col-md-7 col-xs-12" value="@Model.ServiceID" style="display:none" />
                    <div class="form-group">
                        <label class="col-md-2 col-sm-2 col-xs-12" for="serviceName">
                            Dịch vụ <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input type="text" id="serviceName" name="serviceName" required="required" class="form-control col-md-7 col-xs-12" value="@Model.ServiceName" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 col-sm-2 col-xs-12" for="unitPrice">
                            Đơn giá
                        </label>
                        <div class="col-md-3 col-sm-3 col-xs-12">
                            <input type="text" id="unitPrice" name="unitPrice" class="form-control col-md-7 col-xs-12" onkeypress="return event.charCode >= 48 && event.charCode <= 57" value="@Convert.ToInt32(Model.UnitPrice)">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 col-sm-2 col-xs-12" for="notes">
                            Ghi chú
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <textarea id="notes" name="notes"class="form-control col-md-7 col-xs-12" >@Model.Notes</textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 col-sm-2 col-xs-12">Sử dụng</label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input class="js-switch " type="checkbox" id="isActive" name="isActive" @if (!Model.IsActive) { @Html.Raw("checked")  } />
                        </div>
                    </div>
                    <div class="ln_solid"></div>
                    <div class="form-group">
                        <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-2">
                            <button class="btn btn-warning" type="button" id="cancelbutton"><i class="fa fa-times"></i> Hủy</button>
                            <button class="btn btn-primary" type="reset"><i class="fa fa-refresh"></i> Nhập lại</button>
                            <button class="btn btn-success" type="submit"  id="sumbitbutton"><i class="fa fa-check"></i> Lưu</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script src="@Url.Content("~/Extension/switchery/dist/switchery.min.js")"></script>
<script src="@Url.Content("~/Scripts/service.js")"></script>
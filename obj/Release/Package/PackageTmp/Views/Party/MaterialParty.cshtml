@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Styles.Render("~/Style/datatable")
<link href="@Url.Content("~/Extension/bootstrap-daterangepicker/daterangepicker.css")" rel="stylesheet" />
<div class="page-title">
    <div class="title_left">
        <h3>Thực đơn định lượng</h3>
    </div>
</div>
<div class="clearfix"></div>
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h4 class="col-md-3 col-sm-3 col-xs-12" for="departmentName">
                    <strong>Tìm kiếm ngày đãi</strong>
                </h4>
                <div class="col-md-3 col-sm-3 col-xs-12" style="margin-left: -6%">
                    <input type="text" id="partyDate" name="partyDate" class="form-control has-feedback-left" />
                    <span class="fa fa-calendar-o form-control-feedback left" aria-hidden="true"></span>
                </div>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <button class="btn btn-warning" type="button" id="printButton"><i class="fa fa-print"></i> In</button>
                    </li>
                    <li>
                        <button class="btn btn-primary" type="button" id="searchFrom"><i class="fa fa-search"></i>  Tìm kiếm</button>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <form data-parsley-validate class="form-horizontal form-label-left" method="post">
                    <div class="form-group">
                        <table id="datatable-item" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                <tr>
                                    <th rowspan="2">Ngày đãi</th>
                                    <th rowspan="2">Khách</th>
                                    <th colspan="3" style="text-align:center">Bàn</th>
                                    <th rowspan="2"></th>
                                </tr>
                                <tr>
                                    <th>Dự kiến</th>
                                    <th>Dự phòng</th>
                                    <th>Bàn chay</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@Scripts.Render("~/Scripts/datatable")
<script src="@Url.Content("~/Extension/bootstrap-daterangepicker/daterangepicker.js")"></script>
<script src="@Url.Content("~/Extension/jquery-number-master/jquery.number.min.js")"></script>
<script src="@Url.Content("~/Scripts/party/Material_Party.js")"></script>


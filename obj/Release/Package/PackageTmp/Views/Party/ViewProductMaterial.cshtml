@model QUANLYTIEC.Models.TBL_PARTY
<link href="@Url.Content("~/Extension/select2/select2.css")" rel="stylesheet" />
@Styles.Render("~/Style/datatable")
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2><strong>Thực đơn định lượng</strong></h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <button class="btn btn-danger" type="button" id="cancelbutton"><i class="fa fa-times"></i> Hủy</button>
                    </li>
                    <li>
                        <button class="btn btn-warning" type="button" id="printButton"><i class="fa fa-print"></i> In</button>
                    </li>
                    <li>
                        <button class="btn btn-primary" type="button" id="updateButton"><i class="fa fa-refresh"></i> Lấy dữ liệu</button>
                    </li>
                    <li>
                        <button class="btn btn-success" type="button" id="saveButton"><i class="fa fa-check"></i> Lưu</button>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <br />
                <form data-parsley-validate class="form-horizontal form-label-left" method="post">
                    <input type="hidden" id="partyID" name="partyID" value="@Model.PartyID" required="required"/>
                    <div class="form-group">
                        <label class="col-md-2 col-sm-2 col-xs-12">
                            Ngày đãi 
                        </label>
                        <label class="col-md-2 col-sm-2 col-xs-12" id="partyDate">
                            @((Model != null) ? Model.PartyDate.ToString("dd/MM/yyyy HH:mm") : "")
                        </label>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 col-sm-2 col-xs-12">
                            Ông/bà
                        </label>
                        <label class="col-md-10 col-sm-10 col-xs-12" id="customerName">
                            @{if (Model != null)
                            { @Html.Raw(Model.CustomerName)    } }
                        </label>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 col-sm-2 col-xs-12">
                            Số lượng bàn
                        </label>
                        <label class="col-md-2 col-sm-2 col-xs-12" >
                            <i class="fa fa-plus"></i> Dự kiến
                        </label>
                        <label class="col-md-2 col-sm-2 col-xs-12" id="numberTablePlan">
                            @{if (Model != null)
                            { @Html.Raw(Model.NumberTablePlan.ToString("#,##0"))     } }
                        </label>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 col-sm-2 col-xs-12 col-md-offset-2" >
                            <i class="fa fa-plus"></i> Dự phòng
                        </label>
                        <label class="col-md-2 col-sm-2 col-xs-12" id="numberTableException">
                            @{if (Model != null)
                            { @Html.Raw(Model.NumberTableException.ToString("#,##0"))     } }
                        </label>
                        <label class="col-md-2 col-sm-2 col-xs-12">
                            <i class="fa fa-plus"></i> Bàn chay
                        </label>
                        <label class="col-md-2 col-sm-2 col-xs-12" id="numberTableVegetarian">
                            @{if (Model != null)
                            { @Html.Raw(Model.NumberTableVegetarian.ToString("#,##0"))      } }
                        </label>
                    </div>
                    @Html.Partial("~/Views/Partial/Party/Partial_Table_ProductMaterial.cshtml")
                </form>
            </div>
        </div>
    </div>
</div>
@Scripts.Render("~/Scripts/inputmask")
@Scripts.Render("~/Scripts/datatable")
<script src="@Url.Content("~/Extension/jquery-number-master/jquery.number.min.js")"></script>
<script src="@Url.Content("~/Extension/select2/select2.min.js")"></script>
<script src="@Url.Content("~/Scripts/party/productMaterial.js")"></script>